{
  "openapi": "3.1.0",
  "info": {
    "title": "Nationalities API",
    "description": "API for managing nationalities data",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Development server"
    }
  ],
  "paths": {
    "/api/nationalities": {
      "get": {
        "summary": "Get all nationalities",
        "description": "Retrieve a list of all nationalities",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 200
                    },
                    "status": {
                      "type": "string",
                      "example": "OK"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/NationalityResponse"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new nationality",
        "description": "Create a new nationality record",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NationalityCreateRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Nationality created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 201
                    },
                    "status": {
                      "type": "string",
                      "example": "Created"
                    },
                    "data": {
                      "$ref": "#/components/schemas/NationalityResponse"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - Invalid input data",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/nationalities/{id}": {
      "get": {
        "summary": "Get nationality by ID",
        "description": "Retrieve a specific nationality by its ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 6
            },
            "description": "The nationality ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 200
                    },
                    "status": {
                      "type": "string",
                      "example": "OK"
                    },
                    "data": {
                      "$ref": "#/components/schemas/NationalityResponse"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Nationality not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update nationality",
        "description": "Update an existing nationality by its ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 6
            },
            "description": "The nationality ID"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NationalityUpdateRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Nationality updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 200
                    },
                    "status": {
                      "type": "string",
                      "example": "OK"
                    },
                    "data": {
                      "$ref": "#/components/schemas/NationalityResponse"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - Invalid input data",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "404": {
            "description": "Nationality not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete nationality",
        "description": "Delete a nationality by its ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 6
            },
            "description": "The nationality ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Nationality deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 200
                    },
                    "status": {
                      "type": "string",
                      "example": "OK"
                    },
                    "data": {
                      "type": "string",
                      "example": "Nationality deleted successfully"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Nationality not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "NationalityResponse": {
        "type": "object",
        "properties": {
          "nationality_id": {
            "type": "integer",
            "example": 1
          },
          "nationality_name": {
            "type": "string",
            "example": "Singapore"
          },
          "nationality_code": {
            "type": "string",
            "example": "SG"
          }
        }
      },
      "NationalityCreateRequest": {
        "type": "object",
        "required": [
          "nationality_name",
          "nationality_code"
        ],
        "properties": {
          "nationality_name": {
            "type": "string",
            "example": "Singapore"
          },
          "nationality_code": {
            "type": "string",
            "example": "SG"
          }
        }
      },
      "NationalityUpdateRequest": {
        "type": "object",
        "required": [
          "nationality_id",
          "nationality_name",
          "nationality_code"
        ],
        "properties": {
          "nationality_id": {
            "type": "integer",
            "example": 6
          },
          "nationality_name": {
            "type": "string",
            "example": "Thailand"
          },
          "nationality_code": {
            "type": "string",
            "example": "TH"
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer",
            "example": 400
          },
          "status": {
            "type": "string",
            "example": "Bad Request"
          },
          "data": {
            "type": "string",
            "example": "Invalid input data"
          }
        }
      }
    }
  }
}
